<AnchorPane id="mainbgImg" onKeyPressed="#keyPressed" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../resources/CSS/stylesheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientUI.Controller">
