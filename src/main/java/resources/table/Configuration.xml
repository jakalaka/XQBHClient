        </environment>
    </environments>

    <!-- mapping 文件路径配置 -->
    <mappers>
        <mapper resource="resources/table/mapper/CXTCSMapper.xml"/>
        <mapper resource="resources/table/mapper/DSPXXMapper.xml"/>
    </mappers>

